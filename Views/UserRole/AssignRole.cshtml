@{
    var users = ViewBag.Users as List<PGSA_Licence3.Models.User>;
    var roles = ViewBag.Roles as List<PGSA_Licence3.Models.Role>;
    
    ViewData["Title"] = "Assigner des Rôles";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Gestion des Rôles", "/RoleManagement"),
        ("Assigner des Rôles", "/UserRole/AssignRole")
    };
    Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4 fade-in">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="bi bi-person-check fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0 text-gray-800">@ViewData["Title"]</h2>
                            <p class="text-muted mb-0 mt-1">Assignez des rôles aux utilisateurs</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Formulaire d'assignation -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0">Assigner un rôle</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("AssignRole", "UserRole")" id="assignForm">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-5">
                                <label for="userId" class="form-label fw-bold">Utilisateur <span class="text-danger">*</span></label>
                                <select class="form-select" id="userId" name="userId" required>
                                    <option value="">Sélectionner un utilisateur...</option>
                                    @if (users != null)
                                    {
                                        @foreach (var user in users)
                                        {
                                            <option value="@user.Id">@user.Username (@user.Email)</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-5">
                                <label for="roleId" class="form-label fw-bold">Rôle <span class="text-danger">*</span></label>
                                <select class="form-select" id="roleId" name="roleId" required>
                                    <option value="">Sélectionner un rôle...</option>
                                    @if (roles != null)
                                    {
                                        @foreach (var role in roles)
                                        {
                                            <option value="@role.Id">@role.Nom</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-plus-circle me-1"></i>Assigner
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Liste des utilisateurs avec leurs rôles -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0">Utilisateurs et leurs rôles</h5>
                </div>
                <div class="card-body">
                    @if (users == null || !users.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-4 text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun utilisateur trouvé</h5>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom d'utilisateur</th>
                                        <th>Email</th>
                                        <th>Rôles</th>
                                        <th>Statut</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <td>#@user.Id</td>
                                            <td><strong>@user.Username</strong></td>
                                            <td>@user.Email</td>
                                            <td>
                                                @if (user.Roles != null && user.Roles.Any())
                                                {
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        <span class="badge bg-primary me-1">@role.Nom</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Aucun rôle</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Active)
                                                {
                                                    <span class="badge bg-success">Actif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactif</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <a href="@Url.Action("UserRoles", "UserRole", new { id = user.Id })" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i> Voir
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(44, 123, 229, 0.05);
        }
    </style>
}


