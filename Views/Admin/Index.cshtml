@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid fade-in">

    <!-- Titre avec breadcrumb -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Tableau de bord</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Accueil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex align-items-center">
            <span class="text-muted me-2">Dernière synchronisation:</span>
            <span class="badge bg-success">Aujourd'hui, 14:30</span>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 transition-all hover-lift">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Utilisateurs</h6>
                        <div class="d-flex align-items-baseline">
                            <h3 class="fw-bold mb-0">1 245</h3>
                            <span class="ms-2 text-success fw-semibold">+12%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 transition-all hover-lift">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3">
                            <i class="bi bi-cart-check-fill text-info fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Commandes</h6>
                        <div class="d-flex align-items-baseline">
                            <h3 class="fw-bold mb-0">342</h3>
                            <span class="ms-2 text-success fw-semibold">+8%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 transition-all hover-lift">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                            <i class="bi bi-box-seam-fill text-warning fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Produits</h6>
                        <div class="d-flex align-items-baseline">
                            <h3 class="fw-bold mb-0">128</h3>
                            <span class="ms-2 text-danger fw-semibold">-3%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 transition-all hover-lift">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-shrink-0 me-3">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3">
                            <i class="bi bi-currency-euro text-success fs-4"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Revenus</h6>
                        <div class="d-flex align-items-baseline">
                            <h3 class="fw-bold mb-0">3.6M FCFA</h3>
                            <span class="ms-2 text-success fw-semibold">+18%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau -->
    <div class="row">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Derniers utilisateurs</h5>
                    <div>
                        <button class="btn btn-sm btn-light border me-2">
                            <i class="bi bi-funnel me-1"></i> Filtrer
                        </button>
                        <button class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-circle me-1"></i> Ajouter
                        </button>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="ps-4">Nom</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Rôle</th>
                                    <th scope="col">Date de création</th>
                                    <th scope="col" class="text-center pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="https://ui-avatars.com/api/?name=Jean+Dupont&background=1a3b59&color=fff" class="rounded-circle me-3" width="36" height="36" alt="Avatar">
                                            <div>
                                                <div class="fw-semibold">Jean Dupont</div>
                                                <div class="small text-muted">ID: #USR-001</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>jean.dupont@example.com</td>
                                    <td><span class="badge bg-primary">Admin</span></td>
                                    <td>20/11/2025</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-light border">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-light border">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-light border text-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="https://ui-avatars.com/api/?name=Marie+Claire&background=e63757&color=fff" class="rounded-circle me-3" width="36" height="36" alt="Avatar">
                                            <div>
                                                <div class="fw-semibold">Marie Claire</div>
                                                <div class="small text-muted">ID: #USR-002</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>marie.claire@example.com</td>
                                    <td><span class="badge bg-info">User</span></td>
                                    <td>19/11/2025</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-light border">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-light border">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-light border text-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="https://ui-avatars.com/api/?name=Samuel+Noah&background=00d97e&color=fff" class="rounded-circle me-3" width="36" height="36" alt="Avatar">
                                            <div>
                                                <div class="fw-semibold">Samuel Noah</div>
                                                <div class="small text-muted">ID: #USR-003</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>samuel.noah@example.com</td>
                                    <td><span class="badge bg-warning text-dark">Editor</span></td>
                                    <td>18/11/2025</td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-light border">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-light border">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-light border text-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="card-footer bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <div class="text-muted small">Affichage de 1 à 3 sur 245 résultats</div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Précédent</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Suivant</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log("Dashboard admin chargé !");
            
            // Animation au chargement
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('fade-in');
                }, index * 100);
            });
        });
    </script>
    
    <style>
        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(44, 123, 229, 0.05);
        }
        
        .btn-group .btn:hover {
            background-color: rgba(44, 123, 229, 0.1);
        }
        
        .badge {
            font-weight: 500;
            padding: 0.4em 0.8em;
        }
    </style>
}