@{
    var role = ViewBag.Role as PGSA_Licence3.Models.Role;
    var allPermissions = ViewBag.AllPermissions as List<PGSA_Licence3.Models.Permission>;
    var rolePermissions = ViewBag.RolePermissions as List<int>;

    ViewData["Title"] = $"Gérer les permissions du rôle {role?.Nom}";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Administration", "/Admin"),
        ("Gestion des Rôles et Permissions", "/Admin/Permissions"),
        ($"Permissions de {role?.Nom}", "#")
    };
    Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Permissions du rôle : <strong>@role?.Nom</strong></h2>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">Sélectionner les permissions pour ce rôle</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateRolePermissions" asp-route-id="@role.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    @if (allPermissions != null)
                    {
                        @foreach (var permission in allPermissions)
                        {
                            var isChecked = rolePermissions != null && rolePermissions.Contains(permission.Id);
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@permission.Id" 
                                           id="permission_@permission.Id" name="selectedPermissions" 
                                           @(isChecked ? "checked" : "")>
                                    <label class="form-check-label" for="permission_@permission.Id">
                                        <strong>@permission.Nom</strong>
                                        <br />
                                        <small class="text-muted">@permission.Description</small>
                                    </label>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary me-2">Annuler</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Enregistrer les permissions
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>