<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PGSA_Licence3</title>
    
    <!-- Utilisation des CDN comme dans la vue Login pour un design cohérent -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <!-- Feuilles de style globales de l'application -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PGSA_Licence3.styles.css" asp-append-version="true" />
    
    @* Section pour permettre aux vues d'injecter du CSS spécifique *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @* Le contenu de la vue est rendu directement ici, sans conteneur supplémentaire *@
    @RenderBody()

    @* Scripts JavaScript globaux de l'application *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>