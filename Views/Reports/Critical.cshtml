@model List<PGSA_Licence3.Services.Statistics.CriticalStudentDto>
@{
    var seuil = ViewBag.Seuil as double? ?? 75.0;
    var dateDebut = ViewBag.DateDebut as DateTime?;
    var dateFin = ViewBag.DateFin as DateTime?;
    ViewData["Title"] = "Étudiants en situation critique";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Statistiques et Rapports", "/Reports"),
        ("Étudiants critiques", "/Reports/Critical")
    };
    Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4 fade-in">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="bi bi-exclamation-triangle fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0 text-gray-800">@ViewData["Title"]</h2>
                            <p class="text-muted mb-0 mt-1">Étudiants avec un taux d'assiduité inférieur à @seuil%</p>
                        </div>
                    </div>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Retour
                    </a>
                </div>
            </div>

            <!-- Filtres -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="seuil" class="form-label">Seuil critique (%)</label>
                            <input type="number" class="form-control" id="seuil" name="seuil" value="@seuil" min="0" max="100" step="0.1">
                        </div>
                        <div class="col-md-3">
                            <label for="dateDebut" class="form-label">Date de début</label>
                            <input type="date" class="form-control" id="dateDebut" name="dateDebut" value="@(dateDebut?.ToString("yyyy-MM-dd") ?? "")">
                        </div>
                        <div class="col-md-3">
                            <label for="dateFin" class="form-label">Date de fin</label>
                            <input type="date" class="form-control" id="dateFin" name="dateFin" value="@(dateFin?.ToString("yyyy-MM-dd") ?? "")">
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-funnel me-1"></i>Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tableau des résultats -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0">Étudiants critiques (@Model?.Count ?? 0)</h5>
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-check-circle display-4 text-success mb-3"></i>
                            <p class="text-muted">Aucun étudiant en situation critique pour cette période.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Matricule</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Niveau</th>
                                        <th>Filière</th>
                                        <th>Total Séances</th>
                                        <th>Total Absences</th>
                                        <th>Taux Assiduité</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var etudiant in Model)
                                    {
                                        <tr>
                                            <td>@(etudiant.Matricule ?? "-")</td>
                                            <td><strong>@etudiant.Nom</strong></td>
                                            <td>@etudiant.Prenom</td>
                                            <td><span class="badge bg-secondary">@etudiant.Niveau</span></td>
                                            <td><span class="badge bg-info">@etudiant.Filiere</span></td>
                                            <td>@etudiant.TotalSeances</td>
                                            <td><span class="badge bg-danger">@etudiant.TotalAbsences</span></td>
                                            <td>
                                                <span class="badge @(etudiant.TauxAssiduite >= 50 ? "bg-warning" : "bg-danger")">
                                                    @etudiant.TauxAssiduite.ToString("F1")%
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(44, 123, 229, 0.05);
        }
    </style>
}

