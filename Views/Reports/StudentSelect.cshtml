@{
    var etudiants = ViewBag.Etudiants as List<PGSA_Licence3.Models.Etudiant>;
    ViewData["Title"] = "Sélection d'un étudiant";
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        ("Statistiques et Rapports", "/Reports"),
        ("Rapport étudiant", "/Reports/Student")
    };
    Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4 fade-in">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="bi bi-person-check fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-0 text-gray-800">@ViewData["Title"]</h2>
                            <p class="text-muted mb-0 mt-1">Sélectionnez un étudiant pour consulter son rapport</p>
                        </div>
                    </div>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Retour
                    </a>
                </div>
            </div>

            <!-- Liste des étudiants -->
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    @if (etudiants == null || !etudiants.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-4 text-muted mb-3"></i>
                            <p class="text-muted">Aucun étudiant trouvé.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Matricule</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Niveau</th>
                                        <th>Filière</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var etudiant in etudiants)
                                    {
                                        <tr>
                                            <td>@(etudiant.Matricule ?? "-")</td>
                                            <td><strong>@etudiant.Nom</strong></td>
                                            <td>@etudiant.Prenom</td>
                                            <td><span class="badge bg-secondary">@etudiant.Niveau</span></td>
                                            <td><span class="badge bg-info">@etudiant.Filiere</span></td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Student", "Reports", new { id = etudiant.Id })" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye me-1"></i>Voir le rapport
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(44, 123, 229, 0.05);
        }
    </style>
}

